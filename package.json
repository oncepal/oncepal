{
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:ui": "turbo run dev --filter=@oncepal/ui --filter=@oncepal/utils --filter=@oncepal/docs",
    "dev:h5": "turbo run dev --filter=@oncepal/h5",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.0.4"
  },
  "name": "oncepal",
  "packageManager": "npm@9.7.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
